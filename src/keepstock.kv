#:kivy 1.10.1

#:set primary_color (1, .4, 0, 1)
#:set secondary_color (.5, .5, .5, 1)
#:set mark_required '(*)'

<BaseLabel>:

    size: self.texture_size
    text_size: root.width, None
    font_size: '20sp'


<PrimaryLabel@BaseLabel>:
    color: primary_color


<SecondaryLabel@BaseLabel>:
    color: secondary_color


<HeadingLabel@SecondaryLabel>:
    halign: 'center'
    font_size: '40sp'


<LabelTitle@PrimaryLabel>:
    font_size: '70sp'
    halign: 'center'
    valign: 'top'


<BaseButton@Button>:

    font_size: '30sp'


<PrimaryButton@BaseButton>:
    background_color: secondary_color


<Notify>:
    halign: 'center'
    valign: 'center'
    text: self.message
    font_size: '30sp'


<Warn>:
    color: (1, 0, 0, 1)


<Err>:
    bold: True


<Notification>:
    title: root.severity.name.title()
    title_align: 'center'
    title_color: primary_color
    title_size: '50sp'

    size_hint: .8, .8
    content: root.severity.value()


<Form>:
    orientation: 'vertical'


<Entry>:
    multiline: False

    padding: self.width / 2, self.height / 4
    selection_color: (*primary_color[:-1], .5)

    on_text: root.update_padding()
    on_triple_tap: root.on_quad_touch()

    write_tab: False
    required: False

    font_size: self.height / 2


<NamedEntry>:
    value: value

    required: False
    password: False

    orientation: 'vertical'

    HeadingLabel:
        text: root.name.title() + mark_required if root.required else ''

    AnchorLayout:
        anchor_y: 'center'
        Entry:
            id: value
            size_hint: .5, .7
            password: root.password


<LoginPage>:
    orientation: 'vertical'

    AnchorLayout:
        size_hint: 1, .4
        anchor_y: 'top'
        padding: 0, 20


        LabelTitle:
            text: 'KeepStock'

    AnchorLayout:
        halign: 'center'
        Form:
            entries: ['Username', 'Password']
            private: ['Password']

    AnchorLayout:
        anchor_y: 'bottom'
        size_hint: 1, .6

        PrimaryButton:
            text: 'Submit'
            on_press: root.submit()

            size_hint: .5, .5


<SplashPage>:

    anchor_x: 'center'
    anchor_y: 'center'

    LoginPage:
        id: login

