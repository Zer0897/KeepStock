#:kivy 1.10.1

#:set primary_color (1, .4, 0, 1)
#:set secondary_color (.5, .5, .5, 1)


<Notify>:
    font_size: 25
    text: self.message


<Warn>:
    color: (1, 0, 0, 1)


<Err>:
    font_size: 40


<Notification>:
    title: root.severity.name.title()
    title_align: 'center'
    title_color: primary_color
    title_size: 20

    size_hint: .4, .4

    content: root.severity.value()

<LoginPage>:
    rows: 3

    AnchorLayout:
        anchor_y: 'top'

        LabelTitle:
            text: 'KeepStock'

    AnchorLayout:
        Form:
            entries: ['user', 'password']
            private: ['password']

    AnchorLayout:
        anchor_y: 'bottom'

        Button:
            text: 'Submit'
            on_press: root.submit()

            size_hint: .3, .5


<SplashPage>:

    anchor_x: 'center'
    anchor_y: 'center'

    LoginPage:
        id: login

        size_hint: (.8, .8)

<Form>:
    orientation: 'vertical'


<Entry>:
    size_hint_y: None
    multiline: False
    padding_x: self.width / 2
    selection_color: (*primary_color[:-1], .5)

    on_text: root.update_padding()
    on_triple_tap: root.on_quad_touch()

    write_tab: False
    required: False

    valign: 'center'

    font_size: self.height / 2




<NamedEntry>:
    value: value

    required: False
    password: False

    orientation: 'vertical'

    HeadingLabel:
        padding: 0, 10
        text: root.name.title()

    AnchorLayout:
        anchor_y: 'center'
        Entry:
            id: value
            size_hint: .5, 1
            password: root.password



<BaseLabel>:
    font_size: 15
    text_size: root.width, None


<HeadingLabel@BaseLabel>:
    font_size: 25
    halign: 'center'


<LabelTitle@HeadingLabel>:
    font_size: 50
    color: primary_color
