#:kivy 1.10.1

#:set primary_color (1, .4, 0, 1)
#:set red (1, 0, 0, 1)


<Notify>:
    btn: btn
    orientation: 'vertical'
    BaseLabel:
        halign: 'center'
        valign: 'center'
        text: root.message
        font_size: '30sp'

    AnchorLayout:
        anchor_y: 'bottom'
        BaseButton:
            id: btn
            text: 'Okay'


<Warn>:
    color: red


<Err>:
    bold: True


<Notification>:
    title: root.severity.name.title()
    title_align: 'center'
    title_color: primary_color
    title_size: '50sp'
    size_hint: .8, .8
    content: root.severity.value()
