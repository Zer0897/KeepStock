#:kivy 1.10.1

#:import screenmanager kivy.uix.screenmanager


<InventoryViewPage>:
    name: 'view'
    BoxLayout:
        orientation: 'vertical'
        HeaderBar:
            size_hint_y: .1
            DropDownMenu:
                manager: manager
                items: [NavigationItem('me'), NavigationItem('shelf')]
        BoxLayout:
            ScreenManager:
                id: manager
                transition: screenmanager.SlideTransition(direction='up')

                InventoryView:
                    name: 'shelf'
                    title: self.name.title()

                InventoryView:
                    name: 'me'
                    title: self.name.title()
