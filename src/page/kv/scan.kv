#:kivy 1.10.1



<ScanPage>:
    name: 'scan'
    title: self.name.title()
    PrimaryView:
        AnchorLayout:
            Scanner:
                id: scanner
                play: False

        AnchorLayout:
            PrimaryButton:
                text: "Toggle"
                size_hint: .4, .4
                on_press:
                    scanner.play = not scanner.play