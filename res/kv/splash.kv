#:kivy 1.10.1

<LoginPage>:
    rows: 3

    AnchorLayout:
        anchor_y: 'top'

        LabelTitle:
            text: 'KeepStock'

    AnchorLayout:
        Form:
            entries: ['user', 'password']
            private: ['password']

    AnchorLayout:
        anchor_y: 'bottom'

        Button:
            text: 'Submit'
            on_press: root.submit()

            size_hint: .3, .5


<SplashPage>:

    anchor_x: 'center'
    anchor_y: 'center'

    LoginPage:
        id: login

        size_hint: (.8, .8)


