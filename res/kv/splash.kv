#:kivy 1.10.1

<LoginPage>:
    f_user: username
    f_pass: password

    rows: 3

    AnchorLayout:
        anchor_y: 'top'

        LabelTitle:
            text: 'KeepStock'

    GridLayout:
        rows: 4

        HeadingLabel:
            text: 'User'

        Entry:
            id: username
            multiline: False

        HeadingLabel:
            text: 'Password'

        Entry:
            id: password
            password: True

    AnchorLayout:
        anchor_y: 'bottom'

        Button:
            text: 'Submit'
            on_press: root.submit(username.text, password.text)

            size_hint: None, None
            width: 200
            height: 80



<SplashPage>:

    anchor_x: 'center'
    anchor_y: 'center'

    LoginPage:
        id: login

        size_hint: (.8, .8)


