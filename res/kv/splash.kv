#:kivy 1.10.1

<LoginPage>:
    f_user: username
    f_pass: password



    rows: 3

    AnchorLayout:
        anchor_y: 'top'

        LabelTitle:
            text: 'KeepStock'

    AnchorLayout:
        GridLayout:
            size_hint: .5, 1
            rows: 4

            spacing: 10

            NamedEntry:
                id: username

                name: 'User'
                focus: True

            NamedEntry:
                id: password

                password: True
                name: 'Password'

    AnchorLayout:
        anchor_y: 'bottom'

        Button:
            text: 'Submit'
            on_press: root.submit()

            size_hint: .3, .5


<SplashPage>:

    anchor_x: 'center'
    anchor_y: 'center'

    LoginPage:
        id: login

        size_hint: (.8, .8)


