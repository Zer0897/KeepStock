#:kivy 1.10.1

#:import Animation kivy.animation.Animation
#:import AnimationTransition kivy.animation.AnimationTransition

#:set primary_color (1, .4, 0, 1)
#:set secondary_color (.5, .5, .5, 1)


<Entry>:
    multiline: False
    padding_x: self.width / 2
    selection_color: (*primary_color[:-1], .5)

    on_text: root.update_padding()
    on_triple_tap: root.on_quad_touch()

    write_tab: False


<LabelTitle@Label>:
    font_size: 50
    valign: 'top'
    color: primary_color


<HeadingLabel@Label>:
    font_size: 25

