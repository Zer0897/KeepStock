#:kivy 1.10.1

#:import Animation kivy.animation.Animation
#:import AnimationTransition kivy.animation.AnimationTransition

#:set primary_color (1, .4, 0, 1)
#:set secondary_color (.5, .5, .5, 1)


<Entry>:
    multiline: False
    padding_x: self.width / 2
    selection_color: (*primary_color[:-1], .5)

    on_text: root.update_padding()
    on_triple_tap: root.on_quad_touch()

    write_tab: False
    required: False


<NamedEntry>:
    name: ''
    value: entry

    required: False
    password: False

    orientation: 'horizontal'

    HeadingLabel:
        padding: 0, 10
        text: root.name

    AnchorLayout:
        anchor_y: 'center'
        Entry:
            size_hint: .5, 1
            id: entry
            password: root.password



<BaseLabel@Label>:
    font_size: 15
    text_size: root.width, None


<HeadingLabel@BaseLabel>:
    font_size: 25
    halign: 'center'


<LabelTitle@HeadingLabel>:
    font_size: 50
    color: primary_color
